{
  "manifest_version": 3,
  "name": "LIV8 OS - AI Business Operating System",
  "version": "1.0.0",
  "description": "AI-powered business OS for GoHighLevel. Voice-first operator with predictive intelligence and automated workflows.",
  "permissions": [
    "storage",
    "sidePanel",
    "activeTab"
  ],
  "host_permissions": [
    "https://app.gohighlevel.com/*",
    "https://*.gohighlevel.com/*",
    "https://os.liv8ai.com/*",
    "https://backend-ten-chi-43.vercel.app/*"
  ],
  "action": {
    "default_title": "Open LIV8 Operator",
    "default_icon": {
      "16": "icon-16.png",
      "32": "icon-32.png",
      "48": "icon-48.png",
      "128": "icon-128.png"
    }
  },
  "icons": {
    "16": "icon-16.png",
    "32": "icon-32.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://app.gohighlevel.com/*",
        "https://*.gohighlevel.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "index.html"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}